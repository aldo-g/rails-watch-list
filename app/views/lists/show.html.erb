<h1><%=@list.name%></h1>
<h3><%= @movies.count %></h3>
<% @movies.each do |movie| %>
<% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
<li><%= movie.title %> <%= link_to "Remove", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
</li>
<% end %>
<%= link_to "Add a movie", new_list_bookmark_path(@list) %>
<%= link_to "All lists", lists_path %>
